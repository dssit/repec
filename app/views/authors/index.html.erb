<%= stylesheet_link_tag 'authors', media: 'all', 'data-turbolinks-track': 'reload' %>

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>


<p id="notice"><%= notice %></p>

<h1> Author </h1><br>

<%=form_tag authors_path,{:method=>'get', class:"container", role:"search"}  do%>
	<div class="row">
        <div class="col-md-6">
    		<h2>Author search field</h2>
            <div id="custom-search-input">
                <div class="input-group col-md-12">
                  <div class="form-group">
                     <%=text_field_tag :search,"",class:"form-control",placeholder:"Author"%>
                  </div>
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="button">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
	</div>
<%end%>

<id="new_author_button"><%= button_to 'New Author', new_author_path, :method => "get"%>

<table class="table table-bordered table-hover" id="table">
  <thead>
    <tr>
      <th scope="col">Authors</th>
      <th scope="col">Published at</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td scope="row"> <%= author.name %></td>
        <td scope="row"> <%= author.created_at %></td>
        <td>
          <div class="btn-group" id="button_tool">
            <button type="button" class="btn btn-primary btn-outline-dark"><%= link_to 'Show', author, {:style=>'color:#333333;', :class => "css_class"} %></button>
            <button type="button" class="btn btn-primary btn-outline-dark"><%= link_to 'Edit', edit_author_path(author), {:style=>'color:#333333;', :class => "css_class"} %> </button>
            <button type="button" class="btn btn-danger"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @authors, renderer: BootstrapPagination::Rails %> <br>
