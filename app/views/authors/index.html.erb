<%= stylesheet_link_tag 'authors', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container">
<%= form_tag authors_path, { :method => 'get', class: "container", role: "search" }  do %>
  <div class="main">
    <div class="input-group">
      <%=text_field_tag :search, params[:search], class:"form-control", placeholder:"Search for authors" %>
      <div class="input-group-append">
        <button class="btn btn-dark" type="button">
          <i class="fa fa-search"></i>
        </button>
      </div>
    </div>
  </div>
<% end %>

<div id="actions">
  <div class="float-left">
    <button type="button" id="check_all" onclick="toggleButton()" class="btn btn-outline-secondary">Select all</button>
  </div>
  <div class="float-right">
    <%= link_to new_author_path, class: "btn btn-outline-secondary" do %>
      <i class="fas fa-user-plus"></i>Create Author
    <% end %>
  </div>
</div>

<%= form_tag destroy_multiple_authors_path, method: :delete do %>
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">Are you sure?</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        <div class="modal-body">Would you like to remove these authors from the list?</div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
          <%= button_tag type: 'submit', method: :delete, class: "btn btn-danger" do %>
            <i class="fas fa-trash-alt"></i>Delete
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#myModal", id="delete_all_btn">
    <i class="fas fa-trash-alt"></i> Delete all
  </button>

  <div id="table" class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
        <th></th>
        <th scope="col">Authors</th>
        <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @authors.each do |author| %>
          <tr>
          <td align="center">
            <%= check_box_tag "authors[]", author.id %>
          </td>
          <td scope="row"><%= author.name %></td>
          <td>
            <div class="btn-group float-right">
              <%= link_to author, class: "btn btn-outline-secondary btn-sm" do %>
                <i class="fas fa-search"></i>Show
              <% end %>
              <%= link_to edit_author_path(author), class: "btn btn-outline-secondary btn-sm" do %>
                <i class="fas fa-user-edit"></i>Edit
              <% end %>
              <div class="modal" id="myModal<%= author.id %>">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h4 class="modal-title">Are you sure?</h4>
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">Would you like to remove this author from the list?</div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
                      <%= link_to author, method: :delete, class: "btn btn-danger" do %>
                        <i class="fas fa-trash-alt"></i>Delete
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#myModal<%= author.id %>">
                <i class="fas fa-trash-alt"></i>Delete
              </button>
            </div>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="float-right" id="page_entries_info">
    <%= page_entries_info @authors%>
  </div>
<% end %>

  <div>
    <%= paginate @authors, window: 2, entry_name: "authors"  %>
  </div>
</div>
