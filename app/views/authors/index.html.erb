<p id="notice"><%= notice %></p>

<h1> Author </h1>

<br>

<button type="button" class="btn btn-outline-dark"><%= link_to 'New Author', new_author_path, {:style=>'color:#333333;', :class => "css_class"} %></button>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th scope="col">Authors</th>
      <th scope="col">Published at</th>
      <th scope="col">Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td scope="row"> <%= author.name %></td>

        <td scope="row"> <%= author.created_at %></td>

        <td>
          <div class="btn-group">
            <button type="button" class="btn btn-outline-dark"><%= link_to 'Show', author, {:style=>'color:#333333;', :class => "css_class"} %></button>
            <button type="button" class="btn btn-outline-dark"><%= link_to 'Edit', edit_author_path(author), {:style=>'color:#333333;', :class => "css_class"} %> </button>
            <button type="button" class="btn btn-danger"><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></button>
          </div>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
