<!DOCTYPE html>
<html>
  <head>
    <title>Repec</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'true' %>
  </head>

  <body>
    <%= render 'shared/nav' %>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %> alert-dismissible">
        <%= value %>
      </div>
    <% end %>


    <%= yield %>
  </body>
</html>
