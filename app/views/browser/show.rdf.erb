Template-Type: ReDIF-Paper 1.0
<% @paper.authors.each do |author| %>
Author-Name: <%= author.name %>
<% if author.name.split.count > 2 %>
Author-Name-First: <%= author.name.split[0..-2].join(' ') %>
Author-Name-Last: <%= author.name.split[-1] %>
<% else %>
Author-Name-First: <%= author.name.split[0] %>
Author-Name-Last: <%= author.name.split[-1] %>
<% end %>
<% end %>Author-Workplace-Name: Department of Economics, University of California Davis
Title: <%= @paper.title.strip %>
Abstract: <%= @paper.abstract.strip %>
Length: <%= @paper.paper_length %>
<% if @paper.paper_number < 100 %>
File-URL: http://wp.econ.ucdavis.edu/<%= @paper.paper_number%>.pdf
<% elsif @paper.paper_number < 1000 %>
File-URL: http://wp.econ.ucdavis.edu/<%= @paper.paper_number.to_s[0]%>-<%= @paper.paper_number.to_s[1..2] %>.pdf
<% elsif @paper.paper_number < 10000 %>
File-URL: http://wp.econ.ucdavis.edu/<%= @paper.paper_number.to_s[0..1]%>-<%= @paper.paper_number.to_s[2..3] %>.pdf
<% end %>
File-Format: Application/pdf
Number: <%= @paper.paper_number %>
Classification-JEL: <%= @paper.classification_jel.strip %>
KeyWords: <%= @paper.keywords.strip %>
Creation-Date: <%= @paper.created_at.in_time_zone('Pacific Time (US & Canada)').strftime('%Y%m%d') %>
<% if @paper.paper_number < 100 %>
Handle: RePEc:cda:wpaper:00-<%= @paper.paper_number %>
<% elsif @paper.paper_number < 1000 %>
Handle: RePEc:cda:wpaper:0<%= @paper.paper_number.to_s[0] %>-<%= @paper.paper_number.to_s[1..2] %>
<% elsif @paper.paper_number < 10000 %>
Handle: RePEc:cda:wpaper:<%= @paper.paper_number.to_s[0..1] %>-<%= @paper.paper_number.to_s[2..3] %>
<% end %>
