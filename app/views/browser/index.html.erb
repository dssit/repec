<% if @path == "repec" %>
  <%= link_to '[To Parent Directory]', "/" %><br>
  <%= link_to 'cda', "/repec/cda" %>

<% elsif @path == "repec/cda" %>
  <%= link_to '[To Parent Directory]', "/repec" %><br>

  <%= link_to 'cdaarch.rdf', asset_path("cdaarch.rdf")%><br>
  <%= link_to 'cdaseri.rdf', asset_path("cdaseri.rdf")%><br>
  <%= link_to 'wpaper', "/repec/cda/wpaper" %><br>

<% elsif @path == "repec/cda/wpaper" %>
  <%= link_to '[To Parent Directory]', "/repec/cda" %><br>

  <% Paper.all.each do |paper| %>
    <%= paper.created_at.in_time_zone('Pacific Time (US & Canada)').strftime('%m/%d/%Y %l:%M %p') %>

    <%= link_to "#{paper.paper_number}.rdf", paper_rdf_path(paper) %><br>
  <% end %>

<% else %>
  <%= link_to 'repec', "/repec" %>
<% end %>
