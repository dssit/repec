Template-Type: ReDIF-Paper 1.0
<% @paper.authors.each do |author| %>
Author-Name: <%= author.name %>
<% if author.name.split.count > 2 %>
Author-Name-First: <%= author.name.split[0..-2].join(' ') %>
Author-Name-Last: <%= author.name.split[-1] %>
<% else %>
Author-Name-First: <%= author.name.split[0] %>
Author-Name-Last: <%= author.name.split[-1] %>
<% end %>
<% end %>Author-Workplace-Name: Department of Economics, University of California Davis
Title: <%= @paper.title.strip %>
Abstract: <%= @paper.abstract.strip.gsub("\r", '').gsub("\n", "\n ") %>
Length: <%= @paper.paper_length %>
File-URL: <%= public_blob_url(@paper.file) %>
File-Format: application/pdf
Number: <%= @paper.id %>
Classification-JEL: <%= @paper.prettify_jel_codes %>
KeyWords: <%= @paper.keywords.strip %>
Creation-Date: <%= @paper.created_at.in_time_zone('Pacific Time (US & Canada)').strftime('%Y%m%d') %>
Handle: RePEc:cda:wpaper:<%= @paper.id %>
